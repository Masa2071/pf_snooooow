
<div class="">
  <h3>メッセージ</h3>
  <%= form_with model: @chat, class: 'message-form' do |f| %>
      <%= f.text_field :message %>
      <%= f.hidden_field :room_id %>
      <%= f.submit '送信' %>
  <% end %>
</div>
<div class="">
  <% @chats.each do |chat| %>

    <p><%= chat.user.name + " : " +chat.message %></p>
  <% end %>
</div>


