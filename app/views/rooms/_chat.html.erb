<% if messages.present? %>
  <% messages.each do |m| %>
    <div class="chat-box">
      <div class="profile">
        <%= link_to user_path(m) do %>
          <%= attachment_image_tag m.user, :profile_image, :fill, 50, 50, fallback: 'no_image.jpg', size: '50x50', format: 'jpeg' %>
          <%= m.user.name %>
        <% end %>
      </div>
      <div class="chat-hukidashi"> <strong><%= m.message %></strong> <br>
        <%= m.created_at.strftime("%Y-%m-%d %H:%M")%>
      </div>
    </div>
  <% end %>
<% end %>