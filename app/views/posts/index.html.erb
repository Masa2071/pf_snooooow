<%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
<%= link_to 'マイページ', user_path(current_user) %>

<%= form_with model:@post, local:true do |f| %>
  <%= f.attachment_field :post_image %>
  <%= f.text_area :content %>
  <%= f.submit '投稿する' %>
<% end %>

<h1>投稿()</h1>
<% @posts.each do |post| %>
  <div class="post-content-field">
    <div class="profile">
      <%= link_to user_path(post.user_id) do %>
        <%= attachment_image_tag post.user, :profile_image, :fill, 50, 50, fallback: 'no_image.jpg', size: '100x100', format: 'jpeg' %>
        <%= post.user.name %>
      <% end %>
    </div>
    <div class="content">
      <%= link_to post_path(post) do %>
        <%= attachment_image_tag post, :post_image, :fill, 100, 100, format: 'jpeg' %>
        <%= post.content %>
      <% end %>
    </div>
    <div><%= post.post_comments.count %>件コメント</div>
  </div>
<% end %>