<div class="row">
  <div class="col-sm-3 left-line">
    <%= render "devise/shared/back" %>
    <div class="side-bar">
      <%= render "devise/shared/side_links" %>
      <!--モーダル発火-->
      <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#Modal">
        投稿する
      </button>
      <%= render "devise/shared/my_profile", current_user: @current_user %>
    </div>
  </div>
  <div class="col-sm-9 main py-4">
    <h3 class="page-title text-center py-2"><i class="fas fa-home"></i>ホーム</h3>
    <span class="font-s flash-error"><%= flash[:alert] %></span>
      <!--投稿フォーム-->
    <%= render '/posts/form', post: @post %>
    <div class="posts">

        <!-- モーダルの設定 -->

        <div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="Modal" aria-hidden="true">
          <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5>投稿する</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <%= form_with model: @post, remote: true do |f| %>
              <div class="modal-body">
                <%= render "layouts/errors", model: @post %>
                <%= f.label :post_image do %>
                <i class="fas fa-camera"></i>
                <% end %>
                <%= f.attachment_field :post_image, class: "image-camera" %>
                <%= f.text_area :content, placeholder: "入力してください", class: "textarea" %>
              </div>
              <div class="modal-footer">
        
                <%= f.submit('投稿', class: "btn  btn-outline-primary post-btn rounded-pill") %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      <!--投稿一覧-->
        <% @posts.each do |post| %>
          <div class="post-index_<%= post.id %>">
            <!--<#%= render 'posts/index', post: post %>-->
            <div class="profile-index mb-3">
              <%= render 'posts/profile', post: post %>
            </div>
            <!--投稿画像と内容-->
            <div class="post-contents-index">
            	<%= render 'posts/contents', post: post %>
            </div>
            <!--あいこんぼたん-->
            <div>
              <span id="bottons_<%= post.id %>"><%= render 'layouts/favorites_icon', post: post %></span>
              <span id="bottons_<%= post.id %>"><%= render 'layouts/comments_icon', post: post %></span>
              <span id="bottons_<%= post.id %>"><%= render 'layouts/delete_icon', post: post %></span>
            </div>
  <hr>
          </div>
        <% end %>
    </div>
  </div>
</div>


