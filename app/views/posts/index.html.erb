<div class="row">
  <div class="col-sm-3 left-line">
    <div class="side-bar">
      <%= render "devise/shared/side_links" %>
      <%= render "devise/shared/my_profile", current_user: @current_user %>
    </div>
  </div>
  <div class="col-sm-9 main">
      <!--投稿フォーム-->
      <%= render '/posts/form', post: @post %>
  <hr style="height:1px; background-color:#808080;">
    <div class="posts">
      <!--投稿一覧-->
        <% @posts.each do |post| %>
          <div class="post-index">
            <!--<#%= render 'posts/index', post: post %>-->
            <div class="profile-index mb-3">
              <%= render 'posts/profile', post: post %>
            </div>
            <!--投稿画像と内容-->
            <div class="post-contents-index">
            	<%= render 'posts/contents', post: post %>
            </div>
            <!--あいこんぼたん-->
            <div id="bottons_<%= post.id %>">
              <%= render 'posts/icon', post: post %>
            </div>
          </div>
  <hr>
        <% end %>
    </div>
  </div>
</div>


