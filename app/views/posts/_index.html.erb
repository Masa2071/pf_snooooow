<% @posts.each do |post| %>
  <!--プロフィール部分-->
  <div class="">
  <%= link_to user_path(post.user_id) do %>
    <%= attachment_image_tag post.user, :profile_image, :fill, 50, 50, fallback: 'no_image.jpg', size: '100x100', format: 'jpeg' %>
    <%= post.user.name %>
  <% end %>

  <!--投稿画像と内容-->
  <%= link_to post_path(post) do %>
    <%= attachment_image_tag post, :post_image, :fill, 100, 100, format: 'jpeg' %>
    <%= post.content %>
  <% end %>  
  <!--いいね-->
  <% if post.favorited_by?(current_user) %>
	  <%= link_to post_favorites_path(post), method: :delete do %>
	    <i class="fa fa-heart favorite-btn"></i>
	    <%= post.favorites.count %>
	  <% end %>
	<% else %>
	  <%= link_to post_favorites_path(post), method: :post do %>
	    <i class="fa fa-heart unfavorite-btn"></i>
	    <%= post.favorites.count %>
	  <% end %>
	<% end %>
	<!--こめんと-->
	<%= link_to post_path(post) do %>
	  <i class="far fa-comment-dots"></i><%= post.post_comments.count %>
  <% end %> 
	<!--削除アイコン-->
	<% if post.user_id == current_user.id %>　<!--投稿者本人なら削除-->
		<%= link_to  post_path(post), method: :delete do %>
		  <i class="fas fa-trash-alt"></i>
		<% end %>
	<% end %>
  </div>
<% end %>