<div>
  <div>
    <%= link_to user_path(@user) do %>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: 'no_image.jpg', size: '100x100', format: 'jpeg' %>
      <%= @user.name %>
    <% end %>
  </div>
  <div>
    <%= attachment_image_tag @post, :post_image, :fill, 100, 100, size: '100x100', format: 'jpeg' %>
    <% if @post.favorited_by?(current_user) %>
			  <%= link_to post_favorites_path(@post), method: :delete do %>
			    <i class="fa fa-heart favorite-btn"></i>
			    <%= @post.favorites.count %>
			  <% end %>
			<% else %>
			  <%= link_to post_favorites_path(@post), method: :post do %>
			    <i class="fa fa-heart unfavorite-btn"></i>
			    <%= @post.favorites.count %>
			  <% end %>
			<% end %>
		<i class="far fa-comment-dots"></i><%= @post.post_comments.count %>
    <%= @post.content %>
  </div>
</div>

<div>
  <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
    <%= f.attachment_field :image %>
    <%= f.text_area :content, placeholder: "コメントを入力" %>
    <%= f.submit 'コメント送信' %>
  <% end %>
</div>

<div>
  <%= render 'posts/post_comments', post: @post %>
</div>
<%= link_to 'ホーム', posts_path %>