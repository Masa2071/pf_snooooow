<% if current_user.following?(user) %>
  <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-outline-danger w-25 follow-btn" %>
<% else %>
  <%= link_to "フォロー", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-success w-25 follow-btn" %>
<% end %>
