<h1>マイページ</h1>
  <div class="profile">
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: 'no_image.jpg', size: '100x100', format: 'jpeg' %>
    <p><%= @user.name %></p>
    <% if current_user != @user %>
      <% if current_user.following?(@user) %>
        <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
      <% end %>
      <%= link_to 'chatを始める', chat_path(@user)%>
    <% else %>
      <%= link_to 'プロフィール編集', edit_user_path(@user) %>
    <% end %>
    <p><%= @user.birthday %>歳<!--計算して年齢を出す--></p>
    <p><%= @user.sex %></p>
    <p><%= @user.style %></p>
    <p><%= @user.introduction %></p>

    <p>フォロー</p>
    <%= link_to @user.followings.count, user_followings_path(@user) %>
    <p>フォロワー</p>
    <%= link_to @user.followers.count, user_followers_path(@user) %>


  </div>


  投稿
  <div>
    <% @posts.each do |post| %>
      <div class="user-post">
        <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :post_image, :fill, 100, 100, format: 'jpeg' %>
          <%= post.content %>
        <% end %>
      </div>
    <% end %>
  </div>

<div class="sidebar">
  <%= link_to 'ホーム', posts_path %>
</div>