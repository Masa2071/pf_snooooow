<% @posts.each do |post| %>
  <!--プロフィール部分-->
  <div class="post_content">
	  <div class="post decoration">
	  	<%= link_to post_path(post), class: "under-line" do %>
		  	<p class="post-text mt-3 ml-3"><%= truncate(post.content, length: 50) %></p>
		  <% end %>
	  </div>
	  <!--いいね-->
	  <div id="bottons_<%= post.id %>">
		  <% if post.favorited_by?(current_user) %>
			  <%= link_to post_favorites_path(post), class: 'btn', method: :delete, remote: true do %>
			    <i class="fa fa-heart favorite-btn ml-2"></i>
			    <%= post.favorites.count %>
			  <% end %>
			<% else %>
			  <%= link_to post_favorites_path(post), class: 'btn', method: :post, remote: true do %>
			    <i class="fa fa-heart unfavorite-btn ml-2"></i>
			    <%= post.favorites.count %>
			  <% end %>
			<% end %>
			<!--こめんと-->
			<%= link_to post_path(post), class: 'btn' do %>
			  <i class="far fa-comment-dots ml-2"></i>
			 	<%= post.post_comments.count %>
		  <% end %>
			<!--削除アイコン-->
			<% if post.user_id == current_user.id %>　<!--投稿者本人なら削除-->
				<%= link_to  post_path(post), class: 'btn', method: :delete, remote: true do %>
				  <i class="fas fa-trash-alt delete-btn"></i>
				<% end %>
			<% end %>
		</div>
  </div>
  <hr>
<% end %>