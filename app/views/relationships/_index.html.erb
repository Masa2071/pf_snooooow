<% users.each do |user| %>
<div class="f-users my-3">
  <div class="decoration">
  <%= link_to user_path(user), class: "under-line" do %>
    <%= attachment_image_tag(user, :profile_image, size: "70x70", fallback: "no_image.jpg", class: "rounded-circle") %>
    <span class="ml-3"><%= user.name %></span>
    <p class="font-s ml-3 pt-3"><%= truncate(user.introduction, length: 87 ) %></p>
  <% end %>
  </div>
  <div>
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), class: "btn btn-outline-danger w-auto", method: :delete %>
    <% else %>
      <span><%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-success w-auto", method: :post %></span>
    <% end %>
  <% end %>
  </div>
</div>
<hr>
<% end %>