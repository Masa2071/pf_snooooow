<div class="row">
  <div class="col-sm-3 left-line">
    <%= render "devise/shared/back" %>
    <div class="side-bar">
      <%= render "devise/shared/side_links" %>
      <%= render "devise/shared/my_profile", current_user: @current_user %>
    </div>
  </div>
  <div class="col-sm-6 main py-4">
    <ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#following">フォロー中</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#follower">フォロワー</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#recommended">おすすめユーザー</a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane fade show active" id="following">
        <% if @users.exists? %>
        <!--<#% binding.pry %>-->
          <%= render 'relationships/index', users: @users %>
        <% else %>
          <p class="mt-4">ユーザーはいません</p>
        <% end %>
      </div>
      <div class="tab-pane fade" id="follower">
        <% if @followerusers.exists? %>
        <!--<#% binding.pry %>-->
          <%= render 'relationships/index', users: @followerusers %>
        <% else %>
          <p class="mt-4">ユーザーはいません</p>
        <% end %>
      </div>
      <div class="tab-pane fade" id="recommended">
          <%= render 'relationships/latest_user', userall: @userall %>
      </div>
    </div>
  </div>
  <div class="col-sm-3 right-bar">
    <h4 class="sub-title text-center py-1"><i class="fas fa-search pr-1"></i>ユーザー検索</h4>
    <%= render 'relationships/search', search: @search, searchusers: @searchusers %>
  </div>
</div>