<div class="row">
  <div class="col-sm-3 left-line">
    <div class="side-bar">
      <%= render "devise/shared/side_links" %>
    </div>
  </div>
  <div class="col-sm-6 main py-4">
    <ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">フォロワー</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">フォロー中</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <% if @users.exists? %>
        <!--<#% binding.pry %>-->
          <%= render 'relationships/index', users: @users %>
        <% else %>
          <p class="mt-4">ユーザーはいません</p>
        <% end %>
      </div>
      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <% if @followusers.exists? %>
        <!--<#% binding.pry %>-->
          <%= render 'relationships/index', users: @followusers %>
        <% else %>
          <p class="mt-4">ユーザーはいません</p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-sm-3 right-bar">

  </div>
</div>