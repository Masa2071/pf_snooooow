<div class="comment-form py-3 mb-4">
  <%= search_form_for(search, url: user_followers_path, method: :get) do |f| %>
    <div class="mt-3">
      <span class="font-weight-bold"><%= f.label :name, "キーワード" %></span>
      <%= f.search_field :name_or_introduction_cont, size: 30 %>
    </div>
    <div class="mt-3">
      <span class="font-weight-bold"><%= f.label :性別 %>:</span>
    　<%= f.radio_button :sex_eq, '', {:checked => true} %>指定なし
      <%= f.radio_button :sex_eq, 0 %>男性
      <%= f.radio_button :sex_eq, 1 %>女性
    </div>
    <div class="text-right mt-3 pb-2">
      <%= f.submit('検索', class: "btn  btn-outline-primary") %>
    </div>
  <% end %>
</div>
<div>
  <% searchusers.each do |user| %>
    <% unless user == current_user %>
      <div class="decoration">
        <%= link_to user_path(user), class: "under-line" do %>
          <%= attachment_image_tag(user, :profile_image, size: "40x40", fallback: "no_image.jpg", class: "rounded-circle") %>
          <span class="ml-3 font-s"><%= user.name %></span>
          <p class="font-s ml-3 pt-3"><%= truncate(user.introduction, length: 40 ) %></p>
        <% end %>
      </div>
      <hr>
    <% end %>
  <% end %>
</div>